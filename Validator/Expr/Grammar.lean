    obtain ‚ü®ys, hys‚ü© := ys
    simp only
    cases ys with
    | nil =>
      simp
    | cons y ys =>
      cases ys with
      | nil =>
        simp
      | cons _ _ =>
        simp
  next =>
    simp only
    ext s ys
    unfold List.InfixOf.mk
    obtain ‚ü®ys, hys‚ü© := ys
    simp only
    cases ys with
    | nil =>
      simp
    | cons y ys =>
